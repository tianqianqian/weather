<view class="add-bill-page">
  <view class="form">
    <form bindsubmit="submitHandle" bindreset="resetHandle">
      <view class="weui_cells weui_cells_form">
        <view class="weui_cell">
          <view class="weui_cell_hd">
            <label class="weui_label">qq</label>
          </view>
          <view class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="tel" placeholder="请输入qq号" />
          </view>
        </view>
        <view class="weui_cell weui_vcode">
          <view class="weui_cell_hd">
            <label class="weui_label">验证码</label>
          </view>
          <view class="weui_cell_bd weui_cell_primary">
          </view>
          <view class="weui_cell_ft">
            <image> src="/assets/img/vcode.jpg"></image>
          </view>
        </view>
        <view class="weui_cell weui_cell_switch">
          <view class="weui_cell_hd weui_cell_primary">接受通知</view>
          <view class="weui_cell_ft">
            <input class="weui_switch" type="checkbox" />
          </view>
        </view>
        <view class="weui_cell">
          <view class="weui_cell_hd">
            <label for="" class="weui_label">日期</label>
          </view>
          <view class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="date" value="" />
          </view>
        </view>
        <view class="weui_cell">
          <view class="weui_cell_hd">
            <label for="" class="weui_label">时间</label>
          </view>
          <view class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="datetime-local" value="" placeholder="" />
          </view>
        </view>
        <view class="weui_cell weui_cell_select">
          <view class="weui_cell_bd weui_cell_primary">
            <select class="weui_select" name="select1">
              <option selected="" value="0">选择</option>
              <option value="1">微信号</option>
              <option value="2">QQ号</option>
              <option value="3">Email</option>
            </select>
          </view>
        </view>
      </view>
      <view class="weui_cells_title">文本域</view>
      <view class="weui_cells weui_cells_form">
        <view class="weui_cell">
          <view class="weui_cell_bd weui_cell_primary">
            <textarea class="weui_textarea" placeholder="请输入评论" rows="3"></textarea>
            <view class="weui_textarea_counter">
              <span>0</span>/200</view>
          </view>
        </view>
      </view>
    </form>
  </view>
</view>